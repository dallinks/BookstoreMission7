@{
}

@model IEnumerable<string>
<div class="">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>
</div>
<br />
<div class="">
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1" class="btn btn-block @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }   
</div>
